export const getTableConfig = (): ICrudTableProps => {
  return {
    requestApi(query) {
      return API(query)
    },
    draggingMemory: false,
    showSetting: true,
    showExcelExport: true,
    name: '<%= data.tableName %>',
    options: {
      height: 600,
      border: true
    },
    handle: {
      options: {
        width: 100,
        fix: 'right'
      },
      items: []
    },

    columns: [
        <% data.columns.forEach(function(column, index) { %>
          { label: '<%= column.label %>', prop: '<%= column.prop %>' }<% if (index < data.columns.length - 1) { %>,<% } %>
        <% }); %>
    ]
  }
}

